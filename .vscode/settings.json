{
    "vscode-lua-format.configPath": "lua-format.config",
    "Lua.diagnostics.disable": [
        "redundant-parameter"
    ],
    "Lua.format.enable": false,
    "Lua.codeLens.enable": true,
    "Lua.hover.expandAlias": false,
    "emmylua.name.config": {
        "local_name_style": ["camel_case", "upper_snake_case"],
        "function_param_name_style": "camel_case",
        "function_name_style": {
            "type": "pattern",
            "param": "^(?:SP_)?(\\w+)$",
            "$1": "pascal_case"
        },
        "local_function_name_style": {
            "type": "pattern",
            "param": "^(?:SP_)?(\\w+)$",
            "$1": "pascal_case"
        },
        //"table_field_name_style": "",
        "global_variable_name_style": "pascal_case",
        //"module_name_style": "",
        //"require_module_name_style": "",
        //"class_name_style": "",
    },
    "emmylua.codeLens": false,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "keyword.control.bg3txt",
                "settings": {
                    "foreground": "#C586C0"
                }
            },
            {
                "scope": "keyword.operator.bg3txt",
                "settings": {
                    "foreground": "#ffa200"
                }
            },
            {
                "scope": "string.first-column.bg3txt",
                "settings": {
                    "foreground": "#9CDCFE"
                }
            }
        ]
    },
    "files.associations": {
        "*.txt": "bg3txt"
    },

      
}